{% extends twig_global.getParameter('extended_layout_admin') ? twig_global.getParameter('extended_layout_admin') : 'AdminBundle:Base:layout.html.twig' %}

{% block section %}families{% endblock %}

{% block content %}
    
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        {{ "family.sort" | trans }}
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="{{ path('admin_default_index') }}"> <i class="ion-home"></i>  {{ "home" | trans }}</a></li>
        <li><a href="javascript:">{{ "catalogue" | trans }}</a></li>
        <li><a href="{{ path('ecommerce_family_index') }}">{{ "family.plural" | trans }}</a></li>
        <li><a href="{{ path('ecommerce_family_sort') }}">{{ "family.sort" | trans }}</a></li>
      </ol>
    </section>
      
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-body">
               {{ include('AdminBundle:Default:_sort_loader.html.twig') }}

                <div class="box-body">
                    <div class="dd" id="nestable-families">
                        <ol class="dd-list">
                            {% for family in families %}
                                <li class="dd-item" data-id="{{ family.id }}">
                                    <div class="dd-handle">{{ family.name }}</div>
                                </li>
                            {% endfor %}
                        </ol>
                    </div>
                </div>

                <a class="btn" href="{{ path('ecommerce_family_index') }}" title="{{ 'back' | trans }}">{{ 'back' | trans }}</a> 
           
            </div>
          </div>
        </div>
      </div>
    </section>
                
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        function updateOutput(e) {
            var list = e.length ? e : $(e.target)
            var values = window.JSON.stringify(list.nestable('serialize'));

            $('#sort-loader').addClass('loading');

            $.post('{{path('ecommerce_family_sort')}}', { values: values })
            .done(function() {
                $('#sort-loader').removeClass('loading');
            });
        }

        jQuery(document).ready(function() {
            //App.init();

            $('#nestable-families').nestable({
                group: 1
            }).on('change', updateOutput);
        });
    </script>
{% endblock %}