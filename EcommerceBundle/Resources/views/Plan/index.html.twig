{% extends "AdminBundle:Base:layout.html.twig" %}

{% block section %}plans{% endblock %}

{% block content %}
    
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        {{ "plan.plural" | trans }}
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="{{ path('admin_default_index') }}"> <i class="ion-home"></i>  {{ "home" | trans }}</a></li>
        <li><a href="{{ path('ecommerce_plan_index') }}">{{ "plan.plural" | trans }}</a></li>
      </ol>
    </section>
     
      
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
            
            {% include 'CoreBundle:Base:alert.messages.html.twig' %}
            
            <div class="box">
                <div class="box-body">
                    <div class="clearfix">
                        <div class="btn-group">
                            <a href="{{ path('ecommerce_plan_new') }}" class="btn btn-success btn-flat">
                                {{ "add.new" | trans }} <i class="ion-plus"></i>
                            </a>
                        </div>
                    </div>
                            
                    <table class="table table-striped table-bordered table-hover" id="plans-table">
                        <thead>
                        <tr>
                             <th class="hidden-480">ID</th>
                             <th style="width: 200px">{{ "name" | trans }}</th>
                            <th class="hidden-480">{{ "plan.state" | trans }}</th>
                            <th class="hidden-480">{{ "plan.type" | trans }}</th>
                            <th class="hidden-480">{{ "plan.trial" | trans }}</th>
                            <th class="hidden-480">{{ "created" | trans }}</th>
                            <th style="width:50px;"></th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
      </div>
    </section>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        var table_columns = [
            {
                "mData": function(source) {
                    return '<a href="' + source.id + '">' + source.id + '</a>';
                }
            },
            { "mData": "name" },
            {
                "mData": function(source) {
                    if(source.state == 'ACTIVE') return  '<span class="label label-success">Activo</span>';
                    return  source.state ;
                }
            },
            {
                "mData": function(source) {
                    return  source.setupAmount +'€ (inscr.) y ' +source.amount +'€ cada ' + source.frequencyInterval + ' ' + source.frequency + ' durante ' +  source.cycles +' ' + source.frequency;
                }
            },
            {
                "mData": function(source) {
                    if(source.trialCycles > 0){
                        return  source.trialAmount + '€ durante ' +  source.trialCycles +' ' + source.trialFrequency;
                    }else{
                        return  '<span class="label label-danger">No</span>';
                    }
                    
                }
            },
            {
                "mData": function (source) {
                    return source.created.date;
                }
            },
            {
                "mData": function(source) {
                    return '<a href="' + source.id + '/edit" class="btn btn-primary btn-xs btn-flat"><i class="ion-compose"></i> {{ "edit.singular" | trans }}</a> ';
                }
            }
        ];

        jQuery(document).ready(function() {
            TableManaged.init(
                '#plans-table',
                '{{ url('ecommerce_plan_listjson') }}',
                [2, 3, 4, 6],
                table_columns,
                '{{ url('admin_default_getdatatablesi18n', { language: app.request.locale }) }}');
        });
    </script>
{% endblock %}
