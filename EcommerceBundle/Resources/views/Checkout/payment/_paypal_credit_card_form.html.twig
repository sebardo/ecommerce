{% form_theme creditcard_form 'CoreBundle:Form:base.fields.html.twig' %}


<div class="col-md-12 cc-content" id="payment-paypal-cc">
        <div class="col-md-2 hidden-xs"></div>
        <div class="col-md-8 col-xs-12" >
            <div class="col-xs-12">                
                {% include 'CoreBundle:Base:alert.messages.html.twig' %}
                <div class="col-md-10 col-xs-12">
                    <div class="row">
                        {% set form = creditcard_form %}
                        {{ form_start(form) }}
                            {{ form_errors(form) }}
                                
                                {{ form_row(form.firstname, {'label': 'firstname' | trans }) }}
                                {{ form_row(form.lastname, {'label': 'lastname' | trans }) }}
                                {{ form_row(form.cardType) }}
                                {{ form_row(form.cardNo) }}
                                 <div class="form-group">
                                  {{ form_label(form.expirationDate, null, { label_attr: {class: 'col-sm-4 control-label'} }) }}
                                  <div class="col-sm-8">
                                    {{ form_widget(form.expirationDate.day, { attr:  {style: 'display:none'} } ) }}
                                    {{ form_widget(form.expirationDate.month, { attr:  {class: 'form-control'} } ) }}
                                    {{ form_widget(form.expirationDate.year, { attr:  {class: 'form-control'} } ) }}
                                  </div>
                                </div>
                                    
                                <div class="form-group">
                                  {{ form_label(form.CVV, null, { label_attr: {class: 'col-sm-4 control-label'} }) }}
                                  <div class="col-sm-8">
                                      {{ form_widget(form.CVV, { attr: {class: 'form-control'} }) }}<span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
                                  </div>
                                </div>  
                                    
                                {{ form_row(form.CVV) }}
                                {{ form_row(form.ts) }}
                                
                                 <div class="form-group pay">
                                     <label class='col-sm-4 control-label'>
                                         <img src="/bundles/front/images/pay.jpg">
                                     </label>
                                    <div class="col-sm-8">
                                        <div class="price">
                                            <span>{{ "checkout.amount" | trans }}:</span>
                                            <strong>{{ totals.amount | price }}</strong>
                                            {{ form_widget(form.submit, { attr: {class: 'col-sm-8 btn btn-flat btn-success btn-block'} }) }}
                                         </div>
                                        
                                    </div>
                                </div>
                                {{ form_rest(form) }}
                        {{ form_end(form) }}
                        
                       
                    </div>
            
                </div>
                <div class="col-md-2 hidden-xs"></div>
            </div>
            
        </div>
        <div class="col-md-2" ></div>

        <div class="col-sm-12 priceAndCheck">
            <a href="{{ path('ecommerce_checkout_deliveryinfo') }}" class="btn btn-primary" title="{{ "back" | trans }}">{{ "back" | trans }}</a>
        </div>
    </div>
     

    

