<h3>{{'transaction.plural' | trans}}</h3>
    
{% if is_mobile() %}
   
    {% for transaction in transactions %}
        <div>
            <div>{{ transaction.transactionKey }}</div>
            <div>{{ transaction.created | date('d/m/Y') }}</div>
            {% if transaction.items.first.product.id is defined %}
                <div>{{ transaction.totalPrice | prices(transaction.items.first.product.priceType) }}</div>
            {% else %}
                <div>{{ transaction.totalPrice | prices(0) }}</div>
            {% endif %}
            <div>{{ include('EcommerceBundle:Profile:Transaction/_status.html.twig', { transaction: transaction }) }}</div>
            <div>{{ transaction.paymentMethod }}</div>
            <div>
                {% if transaction.invoice.invoiceNumber is defined %}
                    <a href="{{ path('front_profile_showinvoice', { number: transaction.invoice.invoiceNumber }) }}" class="btn btn-primary">{{ 'transaction.details' | trans }}</a>
                {% endif %}
            </div>
            <div style="clear: both"></div>
        </div>
    {% endfor %}

{% else %}
<table class="table table-striped ">
    <thead>
        <tr>
            <th>{{ 'transaction.number' | trans }}</th>
            <th>{{ 'transaction.date' | trans }}</th>
            <th>{{ 'transaction.amount' | trans }}</th>
            <th>{{ 'transaction.status' | trans }}</th>
            <th>{{ 'transaction.payment.method' | trans }}</th>
            <th>&nbsp;</td>
        </tr>
    </thead>
    <tbody>
        {% for transaction in transactions %}
        <tr>
            <td>{{ transaction.transactionKey }}</td>
            <td>{{ transaction.created | date('d/m/Y') }}</td>
            {% if transaction.items.first.product.id is defined %}
                <td>{{ transaction.totalPrice | prices(transaction.items.first.product.priceType) }}</td>
            {% else %}
                <td>{{ transaction.totalPrice | prices(0) }}</td>
            {% endif %}
            <td>{{ include('EcommerceBundle:Profile:Transaction/_status.html.twig', { transaction: transaction }) }}</td>
            <td>
                {% if transaction.paymentMethod == 'store_pickup' %}
                    {{ 'store_pickup' | trans }}
               {% else %}
                    {{transaction.paymentMethod | trans }}
               {% endif %}
            </td>
            <td>
                {% if transaction.invoice.invoiceNumber is defined %}
                    <a href="{{ path('front_profile_showinvoice', { number: transaction.invoice.invoiceNumber }) }}" class="btn btn-primary">{{ 'transaction.details' | trans }}</a>
                {% endif %}
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table> 
{% endif %}

