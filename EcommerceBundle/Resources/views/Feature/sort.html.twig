{% extends "AdminBundle:Base:layout.html.twig" %}

{% block section %}features{% endblock %}

{% block content %}
    
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        {{ "feature.sort" | trans({ '%entity%': category.name }) }}
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="{{ path('admin_default_index') }}"> <i class="ion-home"></i>  {{ "home" | trans }}</a></li>
        <li><a href="javascript:">{{ "catalogue" | trans }}</a></li>
        <li><a href="{{ path('ecommerce_category_show', { id: category.id }) }}">{{ category.name }}</a></li>
        <li><a href="{{ path('ecommerce_feature_index') }}">{{ "feature.plural" | trans }}</a></li>
        <li><a href="{{ path('ecommerce_feature_sort', { categoryId: category.id }) }}">{{ "feature.sort" | trans({ '%entity%': category.name }) }}</a></li>
      </ol>
    </section>
      
    <section class="content">
      <div class="row">
          <div class="col-md-12"> 
             <div class="box">
                <div class="box-body">
                {{ include('AdminBundle:Default:_sort_loader.html.twig') }}
                <!-- TABLE PORTLET-->
                <div class="portlet-body nestable-list">
                    <div class="dd" id="nestable-features">
                        <ol class="dd-list">
                            {% for feature in features %}
                                <li class="dd-item" data-id="{{ feature.id }}">
                                    <div class="dd-handle">{{ feature.name }}</div>
                                </li>
                            {% endfor %}
                        </ol>
                    </div>
                </div>
                <a class="btn" href="{{ path('ecommerce_category_show', { id: category.id }) }}" title="{{ 'back' | trans }}">{{ 'back' | trans }}</a>
                </div>
             </div>
          </div>
      </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        function updateOutput(e) {
            var list = e.length ? e : $(e.target)
            var values = window.JSON.stringify(list.nestable('serialize'));

            $('#sort-loader').addClass('loading');

            $.post('/admin/features/category/{{ category.id }}/sort', { values: values })
            .done(function() {
                $('#sort-loader').removeClass('loading');
            });
        }

        jQuery(document).ready(function() {

            $('#nestable-features').nestable({
                group: 1
            }).on('change', updateOutput);
        });
    </script>
{% endblock %}