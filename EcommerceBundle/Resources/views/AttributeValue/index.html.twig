{% extends "AdminBundle:Base:layout.html.twig" %}

{% block section %}attributes{% endblock %}

{% block content %}
    
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
         {{ "value.from_attribute" | trans({ '%attribute%': attribute.name }) }}
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="{{ path('admin_default_index') }}"> <i class="ion-home"></i>  {{ "home" | trans }}</a></li>
        <li><a href="javascript:">{{ "catalogue" | trans }}</a></li>
        <li><a href="{{ path('ecommerce_attribute_index') }}">{{ "attribute.plural" | trans }}</a></li>
        <li><a href="{{ path('ecommerce_attribute_show', { id: attribute.id }) }}">{{ attribute.name }}</a></li>
        <li><a href="{{ path('ecommerce_attributevalue_index', { attributeId: attribute.id }) }}">{{ "value.plural" | trans }}</a></li>
      </ol>
    </section>
      
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-body">
                <div class="clearfix">
                    <div class="btn-group">
                        <a href="{{ path('ecommerce_attributevalue_new', { attributeId: attribute.id }) }}" class="btn btn-success btn-flat">
                            {{ "add.new" | trans }} <i class="ion-plus"></i>
                        </a>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="attributevalues-table">
                    <thead>
                    <tr>
                        <th class="hidden-480">ID</th>
                        <th class="hidden-480">{{ "name" | trans }}</th>
                        <th style="width:70px;"></th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
              </div>
          </div>
        </div>
      </div>
 
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        var table_columns = [
            { "mData": "id" },
            {
                "mData": function (source) {
                    return '<a href="' + source.id + '">' + source.name + '</a>';
                }
            },
            {
                "mData": function(source) {
                    return '<a href="' + source.id + '/edit" class="btn btn-primary btn-flat btn-xs"><i class="ion-compose"></i> {{ "edit.singular" | trans }}</a> ';
                }
            }
        ];

        jQuery(document).ready(function() {
            TableManaged.init(
                '#attributevalues-table',
                '{{ url('ecommerce_attributevalue_listjson', { attributeId: attribute.id }) }}',
                [2],
                table_columns,
                '{{ url('admin_default_getdatatablesi18n', { language: app.request.locale }) }}');
        });
    </script>
{% endblock %}