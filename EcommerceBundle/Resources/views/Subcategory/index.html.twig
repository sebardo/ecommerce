{% extends "AdminBundle:Base:layout.html.twig" %}

{% block section %}categories{% endblock %}

{% block content %}
    
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
         {{ "subcategory.from_category" | trans({ '%category%': category.name }) }}
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="{{ path('admin_default_index') }}"> <i class="ion-home"></i>  {{ "home" | trans }}</a></li>
        <li><a href="javascript:">{{ "catalogue" | trans }}</a></li>
        <li><a href="{{ path('ecommerce_category_index') }}">{{ "category.plural" | trans }}</a></li>
        <li><a href="{{ path('ecommerce_category_show', { id: category.id }) }}">{{ category.name }}</a></li>
        <li><a href="{{ path('ecommerce_subcategory_index', { categoryId: category.id }) }}">{{ "subcategory.plural" | trans }}</a></li>
      </ol>
    </section>
     
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <div class="clearfix">
                        <div class="btn-group">
                            <a href="{{ path('ecommerce_subcategory_new', { categoryId: category.id }) }}" class="btn btn-success btn-flat">
                                {{ "add.new.2" | trans }} <i class="ion-plus"></i>
                            </a>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover" id="subcategories-table">
                        <thead>
                        <tr>
                            <th class="hidden-480">ID</th>
                            <th class="hidden-480">{{ "name" | trans }}</th>
                            <th style="width:70px;"></th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
      </div>
    </section>
      
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        var table_columns = [
            { "mData": "id" },
            {
                "mData": function (source) {
                    return '<a href="/admin/categories/' + source.id + '">' + source.name + '</a>';
                }
            },
            {
                "mData": function(source) {
                    return '<a href="/admin/categories/' + source.id + '/edit" class="btn bg-purple btn-xs btn-flat"><i class="ion-compose"></i> {{ "edit.singular" | trans }}</a> ';
                }
            }
        ];

        jQuery(document).ready(function() {


            TableManaged.init(
                '#subcategories-table',
                '{{ url('ecommerce_subcategory_listjson', { categoryId: category.id }) }}',
                [2],
                table_columns,
                '{{ url('admin_default_getdatatablesi18n', { language: app.request.locale }) }}');
        });
    </script>
{% endblock %}